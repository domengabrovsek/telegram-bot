{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build:app": "npx tsc",
    "build:docker-image": "docker build -t telegram-bot-backend .",
    "deploy": "npm run build && npm run build:docker-image && npm run push && terraform apply",
    "lint": "eslint ./src --ext .ts --config package.json",
    "push": "docker push gcr.io/domen-telegram-bot/telegram-bot-backend",
    "start": "node dist/index"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domengabrovsek/telegram-bot.git"
  },
  "keywords": ["telegram", "telegram-bot", "serverless", "gcp", "cloudrun", "cloud-run"],
  "author": "Domen Gabrovsek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/domengabrovsek/telegram-bot/issues"
  },
  "homepage": "https://github.com/domengabrovsek/telegram-bot#readme",
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/helmet": "^10.1.0",
    "@fastify/swagger": "^8.3.1",
    "fastify": "^4.12.0",
    "fastify-healthcheck": "^4.4.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.33.0",
    "husky": "^8.0.1",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "no-console": "off"
    }
  }
}
